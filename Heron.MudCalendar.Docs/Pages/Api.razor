    [Parameter]
    public string Component { get; set; } = string.Empty;

    public Type ComponentType { get; set; }

    protected override void OnParametersSet()
    {
        //ComponentType = ApiLink.GetTypeFromComponentLink("Alert");
        //ComponentType = typeof(MudCalendar<>).MakeGenericType(typeof(CalendarItem));
        //ComponentType = CalApiLink.GetTypeFromComponentLink(Component);
        ComponentType = typeof(MudCalendar<>).MakeGenericType(typeof(CalendarItem));
        StateHasChanged();
    }
}
